<div class="container">
  <div class="title">
    <h2 class="question_title"><%= @question.title %></h2>
  </div>

  <div class="body">

    <div class="sidebar">
      <table>
        <tr>
          <td class="stats">asked</td>
          <td>date</td>
        </tr>
        <tr>
          <td class="stats">viewed</td>
          <td>999 times</td>
        </tr>
        <tr>
          <td class="stats">active</td>
          <td>now</td>
        </tr>
      </table>
      <img src="/ads/sidebar.png" />
    </div>

    <div class="main_content">
      <div class="ad">
        <img src="/ads/puppy.png" atl="ad image" />
      </div>

      <div class="question">
        <div class="question_votes"><img src="/temp_vote.png" /></div>
        <div class="question_body"><%= @question.body %></div>
      </div>

      <div>
        <div class="author_details">
          <span>asked <%= @question.created_at.strftime("%b %d") %> at <%= @question.created_at.strftime("%R") %></span>
          <span class="username">
            <a href="/users/<%= @question.author.id %>">
              <img src="/pikachu.png" alt="author profile picture" />
              <%= @question.author.username %>
            </a>
          </span>
        </div>
      <div>

      <div class="add_comment_link"><a href="/answers/new">add a comment</a></div>

      <div class="question_comments">
        <% @question.comments.each do |comment| %>
        <span>
          <%= comment.body %> -
          <a href="/users/<%= comment.author.id %>"><%= comment.author.username %></a>
          <%= comment.updated_at.strftime("%b %d") %> at <%= comment.updated_at.strftime("%R") %>
        </span>
        <% end %>
      </div>

      <div class="answers_heading">
        <table>
          <tr>
            <% if @question.answers.length == 1 %>
              <td><%= @question.answers.length %> Answer</td>
            <% else %>
              <td><%= @question.answers.length %> Answers</td>
            <% end %>
            <td id="sorting_class">#oldest, votes</td>
          </tr>
        </table>
      </div>



      <!-- Need to refactor to not double the code -->
      <!-- iterate through each first for all answers -->


      <% @question.answers.each do |answer| %>
        <div class="question">
          <div class="question_votes"><img src="/temp_vote.png" /></div>
          <div class="question_body"><%= answer.body %></div>
        </div>

        <div>
          <div class="author_details">
            <span>answered <%= answer.created_at.strftime("%b %d") %> at <%= answer.created_at.strftime("%R") %></span>
            <span class="username">
              <a href="/users/<%= answer.author.id %>">
                <img src="/pikachu.png" alt="author profile picture" />
                <%= answer.author.username %></span>
            </a>
          </div>
        <div>

        <div class="add_comment_link"><a href="/answers/new">add a comment</a></div>

        <div class="question_comments">
          <% answer.comments.each do |comment| %>
          <span>
            <%= comment.body %>
            <a href="/users/<%= comment.author.id %>"><%= comment.author.username %></a>
            <%= comment.updated_at.strftime("%b %d") %>
            at
            <%= comment.updated_at.strftime("%R") %>
          </span>
          <% end %>
        </div>
      <% end %>
      <div class="add_answer">
        <p>Your Answer</p>
        <form action="##" method="POST">
          <textarea></textarea>
          <button>Post Your Answer</button>
          <a href="#">#Discard</a>
        </form>
      </div>

    </div>

  </div>

</div>
